use Magento\Framework\App\Action\Action;

?>
<?php
/**
 * Custom Product List Template
 *
 * @var $block \Magento\Catalog\Block\Product\ListProduct
 * @var \Magento\Framework\Escaper $escaper
 */

$_productCollection = $block->getLoadedProductCollection();
/** @var \Magento\Catalog\Helper\Output $_helper */
$_helper = $block->getData('outputHelper');
?>

<?php if (!$_productCollection->count()): ?>
    <div class="message info empty">
        <div><?= $escaper->escapeHtml(__('We can\'t find products matching the selection.')) ?></div>
    </div>
<?php else: ?>
    <?= $block->getToolbarHtml() ?>
    <div>
        <div class="row">
            <?php foreach ($_productCollection as $_product): ?>
                <?php
                $productUrl = $escaper->escapeUrl($_product->getProductUrl());
                $productName = $_helper->productAttribute($_product, $_product->getName(), 'name');
                $productPrice = $block->getProductPrice($_product);
                $productImage = $block->getImage($_product, 'category_page_grid');
                ?>
                <div class="col-lg-4 col-md-6 p-2">
                    <div class="product-card">
                        <div class="product-image">
                            <a href="<?= $productUrl ?>">
                                <?= $productImage->toHtml() ?>
                            </a>
                            <span class="discount-badge">New</span> <!-- static like your HTML -->
                        </div>
                        <div class="product-info">
                            <h5 class="product-title"><?= $productName ?></h5>
                            <div class="product-price">
                                <?= $productPrice ?>
                            </div>
                           <div class="product-buttons">
                                <?php if ($_product->isSaleable()): ?>
                                    <?php $postParams = $block->getAddToCartPostParams($_product); ?>
                                     <form data-role="tocart-form"
                                              data-product-sku="<?= $escaper->escapeHtml($_product->getSku()) ?>"
                                              action="<?= $escaper->escapeUrl($postParams['action']) ?>"
                                              data-mage-init='{"catalogAddToCart": {}}'
                                              method="post">
                                            <?php $options = $block->getData('viewModel')->getOptionsData($_product); ?>
                                            <?php foreach ($options as $optionItem): ?>
                                                <input type="hidden"
                                                       name="<?= $escaper->escapeHtml($optionItem['name']) ?>"
                                                       value="<?= $escaper->escapeHtml($optionItem['value']) ?>">
                                            <?php endforeach; ?>
                                            <input type="hidden"
                                                   name="product"
                                                   value="<?= /* @noEscape */ $postParams['data']['product'] ?>">
                                            <input type="hidden"
                                                   name="<?= /* @noEscape */ Action::PARAM_NAME_URL_ENCODED ?>"
                                                   value="<?=
                                                   /* @noEscape */ $postParams['data'][Action::PARAM_NAME_URL_ENCODED]
                                                    ?>">
                                            <?= $block->getBlockHtml('formkey') ?>
                                            <button type="submit"
                                                    title="<?= $escaper->escapeHtmlAttr(__('Add to Cart')) ?>"
                                                    class="btn btn-cart"
                                                    disabled>
                                                <?= $escaper->escapeHtml(__('Add to Cart')) ?>
                                            </button>
                                        </form>
                                    <a href="<?= $productUrl ?>" class="btn btn-buy"><?= __('Buy It Now') ?></a>
                                <?php else: ?>
                                    <button class="btn btn-cart" disabled><?= __('Out of Stock') ?></button>
                                <?php endif; ?>
                            </div>
                        </div>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
            <?= $block->getChildBlock('toolbar')->setIsBottom(true)->toHtml() ?>

    </div>
<?php endif; ?>
