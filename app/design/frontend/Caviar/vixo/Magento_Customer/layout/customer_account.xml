<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link" name="customer-account-logout-link">
                <arguments>
                    <argument name="label" xsi:type="string">Logout</argument>
                    <argument name="path" xsi:type="string">customer/account/logout</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="class" xsi:type="string">nav-item</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
