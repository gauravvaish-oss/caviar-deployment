<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <!-- Remove Magento's default cart block -->
        <referenceBlock name="checkout.cart.form" remove="true"/>
        <referenceBlock name="checkout.cart.summary" remove="true"/>
        <referenceBlock name="checkout.cart.container" remove="true"/>
        <referenceBlock name="checkout.cart.crosssell" remove="true"/>
        <referenceBlock name="page.main.title" remove="true"/>

        <!-- Add your custom block -->
        <referenceContainer name="content">
            <block class="Vendor\Module\Block\Cart\Custom" name="custom.cart" template="Vendor_Module::cart/custom_cart.phtml">
                <block class="Magento\Checkout\Block\Cart\Coupon" name="checkout.cart.coupon" as="coupon" template="Magento_Checkout::cart/coupon.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
