<?php /** @var $block \Vendor\TopProducts\Block\Widget\TopProducts */ $categoryIds = $block->getCategoryIds(); $title = $block->getData('title') ?: __('Top Products'); ?> <div class="main-title"><div class="d-flex align-items-center justify-content-between"><h2><?= $block->escapeHtml($title) ?></h2><!-- Navigation buttons --><div class="d-flex justify-content-end"><div class="top_product-prev swiper-button-prev" tabindex="0" role="button" aria-label="Previous slide"></div><div class="top_product-next swiper-button-next" tabindex="0" role="button" aria-label="Next slide"></div></div></div><div class="swiper top_product_slider" style="overflow: hidden;"><div class="swiper-wrapper"><?php foreach ($categoryIds as $categoryId): ?> <?php $category = $block->getCategory($categoryId); if (!$category) continue; $products = $block->getProductsByCategory($categoryId); $imageUrl = $block->getCategoryImage($category); ?> <div class="swiper-slide"><div class="top_product_section_bg"><img src="<?= $imageUrl ?>" alt="<?= $block->escapeHtml($category->getName()) ?>" class="img-fluid"/><h5><?= $block->escapeHtml($category->getName()) ?></h5><div class="d-flex align-items-center justify-content-between"><span><?= $products->getSize() ?> ( <?= __('Items') ?> )</span> <a href="<?= $block->getUrl('catalog/category/view', ['id' => $categoryId]) ?>"><img src="<?= $block->getViewFileUrl('images/arrow.png') ?>" alt="arrow" class="img-fluid"/></a></div></div></div><?php endforeach; ?></div></div></div><script type="text/javascript">
require(['jquery', 'swiper'], function ($, Swiper) {
    'use strict';
    $(function () {
        var SwiperClass = Swiper && Swiper.default ? Swiper.default : Swiper;

        $('.main-title').each(function () {
            var $container = $(this);
            var sliderEl = $container.find('.top_product_slider')[0];
            if (!sliderEl) return;

            new SwiperClass(sliderEl, {
                slidesPerView: 3,
                spaceBetween: 20,
                loop: true,
                navigation: {
                    nextEl: $container.find('.top_product-next'),
                    prevEl: $container.find('.top_product-prev')
                },
                breakpoints: {
                    1024: { slidesPerView: 6 },
                    768: { slidesPerView: 4 },
                    480: { slidesPerView: 2 }
                }
            });
        });
    });
});</script>